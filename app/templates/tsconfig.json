{
  "extends": "./node_modules/@bentley/build-tools/tsconfig-base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "declarationMap": false,
    "tsBuildInfoFile": "./lib/tsconfig.tsbuildinfo",
    "resolveJsonModule": true,
    "outDir": "./lib"
  },
  "include": [
    "./src/**/*.ts*"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}